package upenn.cis541.Stopwatch;

import javax.swing.*;

public class StopwatchGUI extends JFrame {
	JPanel Panel;
	JLabel Display;
	JButton Start;
	JButton Stop;
	JButton Reset;
	
	public StopwatchGUI(){
		Panel = new JPanel();
		Display = new JLabel();
		Start = new JButton("Start");
		Stop = new JButton("Stop");
		Reset = new JButton("Reset");
		
		Panel.add(Display);
		Panel.add(Start);
		Panel.add(Stop);
		Panel.add(Reset);
		
		this.add(Panel);
	}
}
